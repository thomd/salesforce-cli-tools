#!/usr/bin/env bash

_sfdata_completions() {
    local cur prev orgs
    cache="/tmp/sf-data.sobjects"
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"

    if [ ! -f "${cache}" ]; then
      sfdx sobject list -o b2bdev1 -s all | paste -sd' ' - > ${cache}
    fi
    orgs=$(cat ${cache})

    case "${prev}" in
        -s|-v)
            COMPREPLY=($(compgen -W "${orgs}" -- ${cur}))
            return 0
            ;;
    esac
}

complete -F _sfdata_completions sf-data
